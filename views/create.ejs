<%- include("partials/header.ejs") %>
<div class="card" style=" width: 100%;">
    <img src="https://onlinejpgtools.com/images/examples-onlinejpgtools/leaves-with-droplets.jpg" style="height: 200px;" class="card-img-top" alt="..." >
    <div class="card-body">
        <div class="container padcontainer border border-1">
        <form action="/create" method="post" enctype="multipart/form-data">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="author" placeholder="Name" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            
              <div class="input-group mb-3">
                <input type="text" name="topic" class="form-control" placeholder="Topic" aria-label="Recipient's username" aria-describedby="basic-addon2">
              </div>   
             
              <div class="input-group mb-3">
                <input type="text" class="form-control" name="heading" placeholder="Heading" aria-label="Username">
              </div>
                            
              <div class="input-group mb-3">
                <span class="input-group-text">Blog</span>
                <textarea class="form-control" name="blog" aria-label="With textarea"></textarea>
              </div>
              <div class="input-group mb-3">
                <input class="form-control" name="fileimg" type="file" id="formFile">
              </div>
              <div class=" mb-3 d-flex justify-content-center ">
                <!-- <input type="submit" class="form-control" placeholder="submit" aria-label="Username"> -->
                <button type="submit" class="btn btn-secondary btn-lg ">Submit</button>
              </div>
            </form>
        </div>
    </div>
  </div>
<%- include("partials/footer.ejs") %>